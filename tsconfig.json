	"compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2016"],
        "moduleResolution": "node",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src"
    ]
}